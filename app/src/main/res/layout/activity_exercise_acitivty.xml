<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/exer">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="400dp"
        android:layout_height="520dp"
        app:cardBackgroundColor="@color/gray_btn_bg_pressed_color"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:contentPadding="2sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="520dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_ex_time"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="(해당코스) 시간"
                    android:textColor="#808080"
                    android:textSize="42px"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/view3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.521" />

                <TextView
                    android:id="@+id/exerTimeText"
                    android:layout_width="97dp"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:text="Progress Bar"
                    android:textColor="#808080"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/view3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.913"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_now_prog"
                    app:layout_constraintVertical_bias="0.707" />

                <ProgressBar
                    android:id="@+id/textview_now_prog"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="357dp"
                    android:layout_height="17dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:max="100"
                    android:progressDrawable="@drawable/progressbar_barstyle"
                    android:progressTint="#3E6BF8"
                    app:layout_constraintBottom_toTopOf="@+id/view3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.512"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.728" />

                <TextView
                    android:id="@+id/textview_timer_now"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:text="Time"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/view3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.065"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_now_prog"
                    app:layout_constraintVertical_bias="0.707" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#ffbacedd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.477"
                    tools:layout_editor_absoluteX="0dp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#ffbacedd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.192"
                    tools:layout_editor_absoluteX="-16dp" />

                <TextView
                    android:id="@+id/textview_ex_total"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="총 운동 시간"
                    android:textColor="#808080"
                    android:textSize="42px"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/view4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view3"
                    app:layout_constraintVertical_bias="0.088" />

                <TextView
                    android:id="@+id/exerTotalTimeText"
                    android:layout_width="97dp"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:text="Progress Bar"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/view4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.913"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_total_prog"
                    app:layout_constraintVertical_bias="0.818" />

                <ProgressBar
                    android:id="@+id/textview_total_prog"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="357dp"
                    android:layout_height="17dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:max="100"
                    android:progressDrawable="@drawable/progressbar_barstyle"
                    android:progressTint="#32CFFC"
                    app:layout_constraintBottom_toTopOf="@+id/view4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.512"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view3"
                    app:layout_constraintVertical_bias="0.607" />

                <TextView
                    android:id="@+id/textview_timer_total"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:text="Time"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/view4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.063"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_total_prog"
                    app:layout_constraintVertical_bias="0.818" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#ffbacedd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.78"
                    tools:layout_editor_absoluteX="0dp" />

                <Button
                    android:id="@+id/imageView3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/ic_playbutton"
                    android:onClick="myOnClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.242"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view4"
                    app:layout_constraintVertical_bias="0.466" />

                <Button
                    android:id="@+id/imageView4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/ic_rec"
                    android:onClick="myOnClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.757"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view4"
                    app:layout_constraintVertical_bias="0.466" />

                <TextView
                    android:id="@+id/textview_ex_name"
                    android:layout_width="176dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="길상현"
                    android:fontFamily="@font/nanumsquareb"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.294" />

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="105dp"
                    android:layout_height="33dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="이전 운동"
                    android:textSize="38px"

                    app:layout_constraintBottom_toTopOf="@+id/view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.013"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.142" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="105dp"
                    android:layout_height="33dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="다음 운동"
                    android:textSize="38px"
                    app:layout_constraintBottom_toTopOf="@+id/view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.983"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.142" />

                <TextView
                    android:id="@+id/textview_ex_next"
                    android:layout_width="105dp"
                    android:layout_height="33dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="길상현"
                    android:textStyle="bold"
                    android:textSize="38px"
                    app:layout_constraintBottom_toBottomOf="@+id/textview_ex_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.98"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/textview_ex_before"
                    android:layout_width="105dp"
                    android:layout_height="33dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="길상현"
                    android:textStyle="bold"
                    android:textSize="38px"
                    app:layout_constraintBottom_toTopOf="@+id/view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.013"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.65" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>